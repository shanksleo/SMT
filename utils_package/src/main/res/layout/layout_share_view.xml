<?xml version="1.0" encoding="utf-8"?>

<!--打开Tools - Layout inspector 查看当前布局层级-->
<!--这里使用merge 可以明显 少一个自定义布局的层级 ，可以直接嵌套到父亲布局的Relative 上面去-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">
    <!--tools:parentTag="android.support.constraint.ConstraintLayout">-->

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享到"
        android:textSize="14sp" />
    <!--app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" -->
    <!--android:textColor="@color/lv_B_title_color"-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        tools:itemCount="3"
        tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:orientation="horizontal" />
    <!-- app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintLeft_toRightOf="@+id/tv_label"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintWidth_default="wrap"-->
    <!--tools:listitem="@layout/item_share_view"-->
</merge>